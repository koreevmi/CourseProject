<UserControl x:Class="ConstructionMaterialsManager.Views.Pages.ReportsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ReportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4361EE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A56D4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5" Margin="0,0,0,10">
            <Label Content="📊 Генерация отчетов" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>

        <!-- Кнопки для генерации Excel-отчётов -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="📄 Материалы" Click="MaterialsExcelReportButton_Click" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="📂 Проекты" Click="ProjectsExcelReportButton_Click" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="🚛 Поставки" Click="DeliveriesExcelReportButton_Click" Style="{StaticResource ReportButtonStyle}"/>
                <Button Content="🔄 Движения" Click="MaterialMovementsExcelReportButton_Click" Style="{StaticResource ReportButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- Статус -->
        <Border Grid.Row="3" BorderBrush="#E0E0E0" BorderThickness="1" Padding="15">
            <StackPanel>
                <TextBlock x:Name="ReportStatusLabel" Text="" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Center"/>
                <ProgressBar x:Name="ReportProgressBar" Height="5" Visibility="Collapsed" IsIndeterminate="True"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
