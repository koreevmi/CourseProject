<Window x:Class="ConstructionMaterialsManager.Views.Windows.DeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поставка" Icon="/icon.png" WindowStartupLocation="CenterScreen" Height="350" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Материал:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="0" Grid.Column="1" Name="MaterialComboBox" DisplayMemberPath="Name" SelectedValuePath="MaterialId" Margin="0,0,0,5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Количество:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="QuantityTextBox" Margin="0,0,0,5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Дата поставки:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="2" Grid.Column="1" Name="DeliveryDatePicker" Margin="0,0,0,5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Поставщик:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Name="SupplierComboBox" DisplayMemberPath="Name" SelectedValuePath="SupplierId" Margin="0,0,0,5"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OkButton_Click" Width="80" Margin="0,10,5,0" Background="#4361EE" Foreground="White"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80" Margin="0,10,0,0" Background="#F5F5F5" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
