<Window x:Class="ConstructionMaterialsManager.Views.Windows.MaterialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Материал" Icon="/icon.png" WindowStartupLocation="CenterScreen" Height="400" Width="450">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="8" Margin="0,0,0,10">
            <Label Content="📦 Информация о материале" FontSize="16" FontWeight="Bold"/>
        </Border>

        <Label Grid.Row="1" Grid.Column="0" Content="Название:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="NameTextBox" Margin="0,0,0,10" Padding="5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Единица измерения:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="UnitTextBox" Margin="0,0,0,10" Padding="5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Стоимость за единицу:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="CostPerUnitTextBox" Margin="0,0,0,10" Padding="5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Поставщик:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="SupplierComboBox" Margin="0,0,0,10" Padding="5" DisplayMemberPath="Name" SelectedValuePath="SupplierId"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Текущий запас:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="CurrentStockTextBox" Margin="0,0,0,10" Padding="5"/>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelBtn" Content="Отмена" Click="CancelBtn_Click" Width="100" Margin="0,0,10,0" Padding="8,4" Background="#F5F5F5" Foreground="Black"/>
            <Button x:Name="SaveBtn" Content="Сохранить" Click="SaveBtn_Click" Width="100" Padding="8,4" Background="#4361EE" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
