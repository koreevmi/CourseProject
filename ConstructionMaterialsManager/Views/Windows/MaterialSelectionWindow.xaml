<Window x:Class="ConstructionMaterialsManager.Views.Windows.MaterialSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор материала" Icon="/icon.png" WindowStartupLocation="CenterScreen" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5" Margin="0,0,0,10">
            <Label Content="📦 Выберите материал и укажите планируемое количество" FontSize="14" FontWeight="Bold" />
        </Border>

        <!-- Таблица материалов -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,0,10">
            <DataGrid x:Name="MaterialsDataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Ед. изм." Binding="{Binding Unit}" Width="Auto"/>
                    <DataGridTextColumn Header="Стоимость за ед." Binding="{Binding CostPerUnit, StringFormat=c}" Width="Auto"/>
                    <DataGridTextColumn Header="Текущий запас" Binding="{Binding CurrentStock}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Поле количества -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
            <Label Content="📏 Планируемое количество:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="QuantityTextBox" Width="150" Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" x:Name="CancelButton" Click="CancelButton_Click" Width="100" Margin="0,0,10,0" Padding="10,5" Background="#F5F5F5" Foreground="Black"/>
            <Button Content="Добавить" x:Name="AddButton" Click="AddButton_Click" Width="100" Padding="10,5"  Background="#4361EE" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
