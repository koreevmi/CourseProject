<Window x:Class="ConstructionMaterialsManager.Views.Windows.ProjectMaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Материалы проекта" Icon="/icon.png" WindowStartupLocation="CenterScreen" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="5" Margin="0,0,0,10">
            <Label Content="📦 Материалы проекта" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
        </Border>

        <!-- Кнопки -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" Padding="10" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="➕ Добавить" x:Name="AddMaterialButton" Click="AddMaterialButton_Click" Margin="0,0,10,0" Padding="10,5"/>
                <Button Content="🗑️ Удалить" x:Name="RemoveMaterialButton" Click="RemoveMaterialButton_Click" Padding="10,5"/>
            </StackPanel>
        </Border>

        <!-- Таблица -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1">
            <DataGrid x:Name="ProjectMaterialsDataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Материал" Binding="{Binding Material.Name}" Width="*"/>
                    <DataGridTextColumn Header="Планируемое количество" Binding="{Binding PlannedQuantity}" Width="Auto"/>
                    <DataGridTextColumn Header="Использованное количество" Binding="{Binding UsedQuantity}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Кнопка закрытия -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Закрыть" x:Name="CloseButton" Click="CloseButton_Click" Width="100" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
