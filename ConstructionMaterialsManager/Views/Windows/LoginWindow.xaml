<Window x:Class="ConstructionMaterialsManager.Views.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Icon="/icon.png" WindowStartupLocation="CenterScreen"
        Height="280" Width="350" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Подпись Логин -->
            <RowDefinition Height="Auto"/>
            <!-- Поле Логин -->
            <RowDefinition Height="Auto"/>
            <!-- Подпись Пароль -->
            <RowDefinition Height="Auto"/>
            <!-- Поле Пароль -->
            <RowDefinition Height="10"/>
            <!-- Отступ -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопка -->
            <RowDefinition Height="Auto"/>
            <!-- Сообщение об ошибке -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Label Grid.Row="0" Content="🏗️ Учет строительных материалов"
               FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Подпись Логин -->
        <Label Grid.Row="1" Content="👤 Логин:" Margin="0,5,0,0"/>

        <!-- Поле Логин -->
        <TextBox Grid.Row="2" x:Name="LoginTextBox" Height="25" Margin="0,0,0,5"/>

        <!-- Подпись Пароль -->
        <Label Grid.Row="3" Content="🔑 Пароль:" Margin="0,5,0,0"/>

        <!-- Поле Пароль -->
        <PasswordBox Grid.Row="4" x:Name="PasswordBox" Height="25" Margin="0,0,0,5"/>

        <!-- Кнопка Войти -->
        <Button Grid.Row="6" Content="Войти" Click="LoginButton_Click"
                HorizontalAlignment="Stretch" Padding="8,4"
                Background="#4361EE" Foreground="White" FontWeight="Bold"/>

        <!-- Сообщение об ошибке -->
        <Label Grid.Row="7" x:Name="ErrorLabel" Foreground="Red"
               HorizontalAlignment="Center" Margin="0,5,0,0"/>
    </Grid>
</Window>
