<Window x:Class="ConstructionMaterialsManager.Views.Windows.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проект" Icon="/icon.png" WindowStartupLocation="CenterScreen" Height="600" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="8" Margin="0,0,0,10">
            <Label Content="📝 Основная информация о проекте" FontSize="16" FontWeight="Bold"/>
        </Border>

        <!-- Поля ввода -->
        <Label Grid.Row="1" Grid.Column="0" Content="Название:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="ProjectNameTextBox" Margin="0,0,0,10" Padding="5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Описание:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="ProjectDescriptionTextBox" Margin="0,0,0,10" Height="60" AcceptsReturn="True" Padding="5"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Дата начала:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="3" Grid.Column="1" x:Name="ProjectStartDatePicker" Margin="0,0,0,10" Padding="5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Дата окончания:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="4" Grid.Column="1" x:Name="ProjectEndDatePicker" Margin="0,0,0,10" Padding="5"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Бюджет:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="ProjectBudgetTextBox" Margin="0,0,0,10" Padding="5"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Статус:" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="6" Grid.Column="1" x:Name="ProjectStatusComboBox" Margin="0,0,0,10" Padding="5">
            <ComboBoxItem>Planned</ComboBoxItem>
            <ComboBoxItem>In Progress</ComboBoxItem>
            <ComboBoxItem>Completed</ComboBoxItem>
            <ComboBoxItem>Cancelled</ComboBoxItem>
        </ComboBox>

        <!-- Материалы проекта -->
        <Border Grid.Row="7" Grid.ColumnSpan="2" BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="8" Margin="0,0,0,5">
                    <Label Content="📦 Материалы проекта" FontSize="14" FontWeight="Bold"/>
                </Border>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="AddMaterialButton" Padding="8,4" Margin="0,0,10,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="➕" FontSize="12" Margin="0,0,5,0"/>
                                <TextBlock Text="Добавить"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="RemoveMaterialButton" Padding="8,4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗑️" FontSize="12" Margin="0,0,5,0"/>
                                <TextBlock Text="Удалить"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="ProjectMaterialsDataGrid" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Материал" Binding="{Binding Material.Name}" Width="*"/>
                            <DataGridTextColumn Header="Планируемое количество" Binding="{Binding PlannedQuantity}" Width="Auto"/>
                            <DataGridTextColumn Header="Использованное количество" Binding="{Binding UsedQuantity}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="CancelButton" Content="Отмена" Click="CancelButton_Click" Width="100" Margin="0,0,10,0" Padding="8,4"/>
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Width="100" Padding="8,4" Background="#4361EE" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
