<Window x:Class="ConstructionMaterialsManager.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Учет строительных материалов" Icon="/icon.png" WindowStartupLocation="CenterScreen" Height="650" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#4361EE">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,0">
                    <TextBlock Text="🏗️" FontSize="20" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Учет строительных материалов" FontSize="16" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <Border BorderBrush="White" BorderThickness="1" Padding="8,5" Margin="0,0,10,0">
                        <Label Name="UserInfoLabel" Foreground="White" FontWeight="Medium" VerticalAlignment="Center"/>
                    </Border>
                    <Button Name="LogoutButton" Content="🚪 Выход" Click="LogoutButton_Click" Foreground="White" Background="Transparent" BorderBrush="Transparent" Padding="10,5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Menu Background="Transparent" BorderBrush="Transparent">
                <MenuItem Header="📦 Материалы" Click="MaterialsMenuItem_Click"/>
                <MenuItem Header="🚛 Поставщики" Click="SuppliersMenuItem_Click"/>
                <MenuItem Header="📂 Проекты" Click="ProjectsMenuItem_Click"/>
                <MenuItem Header="📥 Поставки" Click="DeliveriesMenuItem_Click"/>
                <MenuItem Header="📊 Отчёты" Click="ReportsMenuItem_Click"/>
                <MenuItem x:Name="UsersMenuItem" Header="👥 Пользователи" Click="UsersMenuItem_Click" Visibility="Collapsed"/>
            </Menu>
        </Border>

        <Border Grid.Row="2" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
            <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Padding="5"/>
        </Border>
    </Grid>
</Window>
